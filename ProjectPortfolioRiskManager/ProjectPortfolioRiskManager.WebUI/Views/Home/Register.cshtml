@model RegisterViewModel
@{ ViewBag.Title = "Register";}

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h3>Fill in your data to create an account</h3>
        @Html.ValidationSummary(true)
        @using (Html.BeginForm())
        {
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>Name</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                    <p class="help-block text-danger">@Html.ValidationMessageFor(x => x.Name)</p>
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                    <p class="help-block text-danger">@Html.ValidationMessageFor(x => x.Email)</p>
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    <label>Password</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                    <p class="help-block text-danger">@Html.ValidationMessageFor(x => x.Password)</p>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="form-group col-xs-12">
                    <button type="submit" class="btn btn-default">Register</button>
                    <p>Already have an account? @Html.ActionLink("Log in", "Index")</p>
                </div>
            </div>
        }
    </div>
</div>