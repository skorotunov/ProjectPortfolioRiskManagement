@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "Users list";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <h3>User accounts</h3>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>&nbsp;</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">No user accounts are available for editing</td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            @using (Html.BeginForm("DeleteUser", "Analytic", new { id = user.Id }))
                            {
                                @Html.ActionLink("Edit", "EditUser", new { id = user.Id }, new { @class = "btn btn-default" })
                                <button class="btn btn-danger" type="submit">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
@Html.ActionLink("Create user", "CreateUser", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })