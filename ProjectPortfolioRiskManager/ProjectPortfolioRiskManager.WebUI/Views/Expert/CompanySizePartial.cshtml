@model IEnumerable<CompanySize>

@foreach (var item in Model)
{
    if (item.Id == ViewBag.CompanySizeId)
    {
        <input type="radio" name="CompanySizeId" value="@item.Id" checked /> @item.Value<br />
    }
    else
    {
        <input type="radio" name="CompanySizeId" value="@item.Id" /> @item.Value<br />
    }
}